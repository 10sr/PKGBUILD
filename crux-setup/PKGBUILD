# Maintainer: 10sr <8slashes+arch [at] gmail [dot] com>

pkgname=crux-setup
pkgver=3.1
pkgrel=1
pkgdesc="some setup scripts for installing CRUX"
arch=('any')
url="http://crux.nu"
depends=('dialog' 'rsync')
license=('GPL')
source=("git://crux.nu/system/iso.git" "path.patch" "crux-setup.sh")
md5sums=('SKIP'
         'f54595c5cbd1f466db9537ee1eb404e0'
         '40ddd1280e54378bf4ca8eea141e2f49')

prepare(){
    cd iso
    patch -p1 <../path.patch
}

package(){

    install -Dm755 crux-setup.sh "$pkgdir"/usr/bin/crux-setup

    cd iso/iso/bin

    install -Dm755 setup "$pkgdir"/usr/lib/$pkgname/setup
    install -Dm755 setup-chroot "$pkgdir"/usr/bin/crux-setup-chroot
}
