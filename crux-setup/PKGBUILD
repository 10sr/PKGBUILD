# Maintainer: 10sr <8slashes+arch [at] gmail [dot] com>

pkgname=crux-setup
pkgver=3.1
pkgrel=1
pkgdesc="some setup scripts for installing CRUX"
arch=('any')
url="http://crux.nu"
depends=('dialog')
license=('GPL')
source=("git://crux.nu/system/iso.git" "path.patch")
md5sums=('SKIP'
         'f54595c5cbd1f466db9537ee1eb404e0')

prepare(){
    cd iso
    patch -p1 <../path.patch
}

package(){
  cd iso/iso/bin

  install -Dm755 setup "$pkgdir"/usr/bin/crux-setup
  install -Dm755 setup-chroot "$pkgdir"/usr/bin/crux-setup-chroot
}
